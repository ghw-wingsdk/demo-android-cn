<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="#FFDDDDDD"/>
                </shape>
            </item>
            <item>
                <shape>
                    <solid android:color="#FFEEEEEE"/>
                </shape>
            </item>
            <item android:bottom="3dp"
                android:left="1dp"
                android:right="1dp">
                <shape>
                    <solid android:color="#FF888888" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="#FFEEEEEE"/>
                </shape>
            </item>
            <item android:bottom="3dp">
                <shape>
                    <solid android:color="#FFCCCCCC"
                        android:left="1dp"
                        android:right="1dp" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_selected="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="#FFEEEEEE"/>
                </shape>
            </item>
            <item android:bottom="3dp"
                android:left="1dp"
                android:right="1dp">
                <shape>
                    <solid android:color="#FFCCCCCC" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item>
        <layer-list>
            <item>
                <shape>
                    <solid android:color="#FFEEEEEE"/>
                </shape>
            </item>
            <item android:bottom="3dp"
                android:left="1dp"
                android:right="1dp">
                <shape>
                    <solid android:color="#FF555555" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>